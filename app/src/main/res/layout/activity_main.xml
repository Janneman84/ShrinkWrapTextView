<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.janneman84.shrinkwraptextview.ShrinkWrapTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a ShrinkWrapped TextView"
        android:textAlignment="textEnd"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:maxWidth="200dp"
        custom:shrinkWrap="true"
        />

    <com.example.shrinkwrap.MyKotlinTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a ShrinkWrapped TextView"
        android:textAlignment="center"
        android:background="@color/design_default_color_primary"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:maxWidth="200dp"
        />

    <com.example.shrinkwrap.MyJavaTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a ShrinkWrapped TextView"
        android:textAlignment="textStart"
        android:background="@color/design_default_color_secondary_variant"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:maxWidth="200dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is not a ShrinkWrapped TextView"
        android:textAlignment="textStart"
        android:background="@color/design_default_color_error"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:maxWidth="200dp"
        />

    <com.example.shrinkwrap.MyKotlinButton
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:padding="8dp"
        android:textSize="16sp"
        android:text="This is a ShrinkWrapped Button"
        />

    <Button
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:padding="8dp"
        android:textSize="16sp"
        android:text="This is not a ShrinkWrapped Button"
        />

</LinearLayout>